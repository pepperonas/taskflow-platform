    <!-- Create workflow tables -->
    <changeSet id="4" author="martin">
        <createTable tableName="workflows">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(1000)"/>
            <column name="status" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="owner_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="nodes_json" type="jsonb"/>
            <column name="edges_json" type="jsonb"/>
            <column name="triggers_json" type="jsonb"/>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="workflows"
                baseColumnNames="owner_id"
                constraintName="fk_workflows_owner"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <createIndex tableName="workflows" indexName="idx_workflows_owner">
            <column name="owner_id"/>
        </createIndex>

        <createIndex tableName="workflows" indexName="idx_workflows_status">
            <column name="status"/>
        </createIndex>

        <createTable tableName="workflow_executions">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="workflow_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="execution_log" type="jsonb"/>
            <column name="error_details" type="text"/>
            <column name="executed_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="completed_at" type="timestamp"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="workflow_executions"
                baseColumnNames="workflow_id"
                constraintName="fk_executions_workflow"
                referencedTableName="workflows"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <createIndex tableName="workflow_executions" indexName="idx_executions_workflow">
            <column name="workflow_id"/>
        </createIndex>

        <createIndex tableName="workflow_executions" indexName="idx_executions_status">
            <column name="status"/>
        </createIndex>
